@model FaleMais.Models.PRECO

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>PRECO</legend>
        @Html.HiddenFor(model => model.PRECO_ID)
        <div class="editor-label">
            @Html.LabelFor(model => model.PRECO_IDORIGEM, "DDD")
        </div>
        <div class="editor-field">
            @Html.DropDownList("PRECO_IDORIGEM", String.Empty)
            @Html.ValidationMessageFor(model => model.PRECO_IDORIGEM)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PRECO_IDDESTINO, "DDD1")
        </div>
        <div class="editor-field">
            @Html.DropDownList("PRECO_IDDESTINO", String.Empty)
            @Html.ValidationMessageFor(model => model.PRECO_IDDESTINO)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PRECO_VALORMINUTO)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PRECO_VALORMINUTO)
            @Html.ValidationMessageFor(model => model.PRECO_VALORMINUTO)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PRECO_ATIVO)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PRECO_ATIVO)
            @Html.ValidationMessageFor(model => model.PRECO_ATIVO)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar ", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
